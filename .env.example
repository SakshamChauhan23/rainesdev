# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database (Supabase PostgreSQL)
# For production, add connection pool limits to prevent exhaustion:
# ?connection_limit=10&pool_timeout=20
# Example: postgresql://user:pass@host:5432/db?connection_limit=10&pool_timeout=20
DATABASE_URL=
DIRECT_URL=

# Supabase Auth
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Stripe (for payments)
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BOOKING_CALENDAR_URL=https://calendar.app.google/QyuK9XKQ52r6dNPD6

# Review System Configuration (P2.10)
REVIEW_ELIGIBILITY_DAYS=14
MAX_COMMENT_LENGTH=1000

# Sentry Error Tracking (optional - only for production)
NEXT_PUBLIC_SENTRY_DSN=

